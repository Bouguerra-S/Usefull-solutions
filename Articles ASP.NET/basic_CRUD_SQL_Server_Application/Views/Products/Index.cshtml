@model IEnumerable<basic_CRUD_SQL_Server_Application.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductLabel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductLabel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                <!---->
                @if (item.ProductImage != null)
                {
                    var base64 = Convert.ToBase64String(item.ProductImage);
                    var imgsrc = string.Format("data:image;base64,{0}", base64);
                    <img src='@imgsrc'
                         style="max-width:200px;max-height:200px" />
                }

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
            </td>
            <td align="center">
                <a asp-controller="cart" asp-action="buy" asp-route-id="@item.ProductId">Buy Now</a>
            </td>
        </tr>
}
    </tbody>
</table>
