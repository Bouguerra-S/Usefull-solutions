<Window x:Class="LoginApp.Views.welcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginApp.Views"
        mc:Ignorable="d"
        Title="MyAppName" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Administration" Background="Aqua" Grid.Column="0" Grid.Row="0"></Button>
        <Button Content="Configuration" Background="Beige" Grid.Column="0" Grid.Row="1"></Button>
        <Button Content="Stockage" Background="Coral" Grid.Column="1" Grid.Row="0"></Button>
        <Button Content="WCS" Background="DodgerBlue" Grid.Column="1" Grid.Row="1"></Button>
        <Button Content="PC" Background="Fuchsia" Grid.Column="2" Grid.Row="0"></Button>
        <Button Content="GP" Background="Gold" Grid.Column="2" Grid.Row="1"></Button>
    </Grid>
</Window>
